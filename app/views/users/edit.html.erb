<% if @user.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="flash" style="margin-left: 20px;">
    　<%= flash[:notice] %>
  </div>
<% end %>

<div class="container" style="width: 1170px;">
  <div class="row">
    <div class="col-md-3">
      <h2>User info</h2>

<%= form_for(@user) do |f| %>
    <div class="profile-edit">
        <h4>Name</h4>
        <%= f.text_field :name, placeholder:"名前"%>
        <h4>Image</h4>
        <%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg" %>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像" %>
        <h4>Introduction</h4>
        <%= f.text_area :introduction, placeholder:"自己紹介文"%>
        <%= f.submit "Update User", class: "btn btn-default glyphicon glyphicon-wrench", :style=>"background-color:#00FF00" %>
        <% end %>
    </div>
    </div>
  </div>
</div>