<% if flash[:notice] %>
  <div class="flash" style="margin-left: 20px;">
    　<%= flash[:notice] %>
  </div>
<% end %>

<div class="container" style="width: 1170px;">
	<div class="row">


		<div class="col-md-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
			<table>
				<tr style="border-top: 1px solid #ddd;">
  					<th style="width: 166px; padding: 8px">name</th>
  					<th style="width: 128px; padding: 8px"><%= @user.name %></th>
 				</tr>
 				<tr style="border-top: 1px solid #ddd;">
   					<th style="width: 166px; padding: 8px;">introduction</th>
   					<th style="width: 128px; padding: 8px;"><%= @user.introduction %></th>
 				</tr>
 			</table>
 		    <%= link_to '', edit_user_path(current_user.id), class: "btn btn-default glyphicon glyphicon-wrench", :style=>"width: 265px; margin-top: 5px; background-color:#00FF00" %>
			<h2>New book</h2>
				<%= form_for(@books) do |f| %>
    				<h4>Title</h4>
    				<%= f.text_field :title, :style=>"width: 265px;" %>
    				<h4>Opinion</h4>
    				<%= f.text_area :body, :style=>"width: 265px;"  %>
    				<%= f.submit 'Create Book', class: "btn btn-default glyphicon glyphicon-wrench", :style=>"width: 265px; margin-top: 5px; background-color:#FF3333" %>
			    <% end %>
		</div>

		<div class="col-md-9">
			<h2>Book detail</h2>
			 <table>
				<tr style="border-top: 1px solid #ddd;">
    				<td style="width: 104px;">
    					<%= attachment_image_tag @user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %>
    					<p><%= link_to @user.name, user_path(@user.id) %></p>
    				</td>
    				<td style="width: 100px;"><%= @book.title %></td>
    				<td style="width: 334px;"><%= @book.body %></td>

        <% if user_signed_in? && @book.user_id == current_user.id %>
    				<td><%= link_to 'edit', edit_book_path(@book), class: "btn btn-default", :style=>"width: 50px; background-color:#996666" %></td>
    				<td><%= link_to 'Destroy', book_path(@book), method: :delete, data: {confirm: "本当に削除していいですか"}, class: "btn btn-default", :style=>"width: 80px; background-color:#9966CC" %></td>
        <% end %>

  				</tr>
			 </table>
		</div>
	</div>
</div>
