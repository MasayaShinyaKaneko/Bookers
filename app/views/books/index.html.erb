<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="flash" style="margin-left: 20px;">
    ã€€<%= flash[:notice] %>
  </div>
<% end %>

<div class="container" style="width: 1170px;">
	<div class="row">


		<div class="col-md-3">
			<h2>User info</h2>
			<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, fallback: "no_image.jpg" %>
			<table>
				<tr style="border-top: 1px solid #ddd;">
  					<th style="width: 166px; padding: 8px">name</th>
  					<th style="width: 128px; padding: 8px"><%= @user.name %></th>
 				</tr>
 				<tr style="border-top: 1px solid #ddd;">
   					<th style="width: 166px; padding: 8px;">introduction</th>
   					<th style="width: 128px; padding: 8px;"><%= @user.introduction %></th>
 				</tr>
 			</table>
 		    <%= link_to '', edit_user_path(current_user.id), class: "btn btn-default glyphicon glyphicon-wrench", :style=>"width: 265px; margin-top: 5px; background-color:#00FF00" %>
			<h2>New book</h2>
				<%= form_for(@book) do |f| %>
    				<h4>Title</h4>
    				<%= f.text_field :title, :style=>"width: 265px;" %>
    				<h4>Opinion</h4>
    				<%= f.text_area :body, :style=>"width: 265px;"  %>
    				<%= f.submit 'Create Book', class: "btn btn-default glyphicon glyphicon-wrench", :style=>"width: 265px; margin-top: 5px; background-color:#FF3333" %>
			    <% end %>
		</div>


		<div class="col-md-9">
			<h2>Books</h2>
			 <table>
				<tr style="border-bottom: 2px solid #ddd;">
    				<th style="width: 104px;">Image</th>
    				<th style="width: 186px;">Title</th>
    				<th style="width: 348px;">Opinion</th>
  				</tr>
  				<% @books.each do |book| %>
 				<tr style="border-bottom: 1px solid #ddd;">
 					<td style="padding: 8px;"><%= attachment_image_tag book.user, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", size:'60x60' %></td>
  					<td><%= link_to book.title, book_path(book.id) %></td>
  					<td><%= book.body %></td>
 				</tr>
  			    <% end %>
			 </table>
		</div>
	</div>
</div>