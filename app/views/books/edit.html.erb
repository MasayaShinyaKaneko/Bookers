<% if @book.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="flash" style="margin-left: 20px;">
    　<%= flash[:notice] %>
  </div>
<% end %>

<div class="container" style="width: 1170px;">
  <div class="row">
    <div class="col-md-3">
      <h2>Editing Book</h2>

<%= form_for(@book) do |f| %>
    <div class="book-edit">
        <h4>Title</h4>
        <%= f.text_field :title, placeholder:"タイトル" %>
        <h4>Opinion</h4>
        <%= f.text_area :body, placeholder:"感想" %>
        <%= f.submit "Update Book", class: "btn btn-default", :style=>"width: 160px; background-color:#996666" %>
        <% end %>
    </div>
    <div class="edit-show" style="border-right: 1px, black">
        <%= link_to "show", book_path(@book.id) %>
        <%= link_to "back", books_path %>
    </div>
  </div>
</div>